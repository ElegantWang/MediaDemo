<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_ts_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TS Demo" />

    <Button
        android:id="@+id/btn_media_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Media Demo" />

    <Button
        android:id="@+id/btn_convert_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Demo" />

    <Button
        android:id="@+id/btn_show_codec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Codec" />

    <Button
        android:id="@+id/btn_exo_hls_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exo Hls Test" />
</LinearLayout>